#!/system/bin/sh

set +e

busybox kill -9 $(busybox pgrep -f "dnsmasq_dhcp --no-daemon \-port=0")
busybox kill -9 $(busybox pgrep -f dnsmasq.CBBAK) 

echo "Run dnsmasq_dhcp" 2>/dev/null

dnsmasq_dhcp --no-daemon --port=0 --no-ping --dhcp-authoritative $* 2>/dev/null &
pid=$!
wait $pid

echo "Run dnsmasq_dhcp failed, try dnsmasq.CBBAK" 2>/dev/null

dnsmasq.CBBAK --no-daemon $* 2>/dev/null &
pid=$!
wait $pid